/* pages/index/index.wxss */
page{
background:#f7f7f7;
}
.userinfo {
display: flex;
flex-direction: column;
align-items: center;
}

.userinfo-avatar {
width: 128rpx;
height: 128rpx;
margin: 20rpx;
border-radius: 50%;
}

.userinfo-nickname {
color: #aaa;
}

.usermotto {
margin-top: 200px;
}

.logo {
width: 100%;
height: 360rpx;
display: block;
}

.u-wrp-bnr{
height: 360rpx;
}
/* 滚动 */
.score{
height:100rpx;
background: #f2e6e0;
display: flex;
padding-left:20rpx;
padding-right:20rpx;
}
.score view:nth-child(1){
height:100rpx;
text-align: center;
line-height:100rpx;
padding-left:10rpx;
padding-right:10rpx;
}
.score view:nth-child(3){
width:50rpx;
height:100rpx;
text-align: center;
line-height:100rpx;
}
.score image{
width:20rpx;
height:20rpx;
text-align: center;
}
.score view:nth-child(2){
width:10rpx;
flex:1;
height:100rpx;
text-align: center;
line-height:100rpx;
}
.score .scoredong{
width:100%;
}
/* 字幕滚动 */
.marquee_box {position:relative;color:#333;height:90rpx;display:block;overflow:hidden;} 
.marquee_text {white-space: nowrap;position:absolute;top:0;font-size:28rpx;height:90rpx;line-height:90rpx;}
/* 商品介绍 */
.shangpin{
padding:20rpx;
font-size:25rpx;
border-bottom:1px solid #ebe8e8;
}
.shangpin view{
margin-bottom:20rpx;
}
.shangpin text{
line-height:40rpx;
font-size:25rpx;
color:#aaa;
}
/* 商品详情 */

.business_heading{
display: flex;
justify-content: space-around;
