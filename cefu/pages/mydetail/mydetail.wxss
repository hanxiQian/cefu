margin-top: 4rpx;
}
.menimg image{
width: 100%;
height: 429rpx;
}
.select_box{
width: 80%;
height: 62rpx;
border-radius: 14rpx;
position: relative;
color: black;
font-size: 25rpx;
z-index: 10000;
}
.select_box .select{
box-sizing: border-box;
width: 100%;
height: 100%;
display: flex;
align-items: center;
padding: 0 10rpx;
font-weight: 600;
}
.select_box .select .select_text{
  font-size: 29rpx;
color:black;
  line-height: 28rpx;
  flex: 1;
}
.select_box .select .select_img{
  width: 30rpx;
  height: 30rpx;
  display: block;
  transition:transform 0.3s;
}
.select_box .select .select_img_rotate{
  transform:rotate(180deg); 
}
.select_box .option_box{
position: absolute;
top: calc(100% + 10rpx);
width: 100%;
box-sizing: border-box;
height: 0;
overflow-y: auto;
background: #fff;
transition: height 0.3s;
border-left: 1px solid #b8af73;
border-right: 1px solid #b8af73;
font-size: 43rpx;
border-radius: 20rpx;
}
.select_box .option_box .option{
display: block;
line-height: 30rpx;
font-size: 29rpx;
border-top: 1px solid #b8af73;
border-bottom: 1px solid #b8af73;
padding: 10rpx;
font-weight: 600;
}
