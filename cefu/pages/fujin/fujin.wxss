/* pages/fujin/fujin.wxss */
page{
  background:#f4f4f4;
}
.box{
  background:white;
}
.top image{
  width:30rpx;
  height:30rpx;
  margin-left:20rpx;
}
.top text{
  font-size:35rpx;
  font-weight: 600;
  margin-left:300rpx;
}
.show{
  text-align: center;
  margin-top:60rpx;
  margin-bottom:30rpx;
}
.show image{
  width:250rpx;
  height:5rpx;
}
.show text{
  margin-left:15rpx;
  margin-right: 15rpx;
}
.img{
  width:96%;
  margin:0 auto;
  height:500rpx;
}
.img image{
  width:100%;
  height:500rpx;
}
.position{
  font-weight: 600;
  margin-top:30rpx;
  padding-left:20rpx;
  padding-right:20rpx;
  padding-bottom:30rpx;
}
.position view{
margin-top:10rpx;
}
.position image{
  width:40rpx;
  height:40rpx;
  margin-left:50rpx;
}
.position view:nth-child(3){
  line-height:30rpx;
}
.position view:nth-child(3) image{
  float: right;
  vertical-align: middle;
}