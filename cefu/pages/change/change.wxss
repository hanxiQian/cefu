/* pages/change/change.wxss */
.title{
  display: flex;
  justify-content: space-around;
  font-size:30rpx;
  height:80rpx;
}
.title image{
  width:40rpx;
  height:40rpx;
  vertical-align: middle;
  margin-right:10rpx;
}
.title view text:last-child{
  color:gray;
  margin-left:10rpx;
}
.userinfo {
display: flex;
flex-direction: column;
align-items: center;
}
.userinfo-avatar {
width: 128rpx;
height: 128rpx;
margin: 20rpx;
border-radius: 50%;
}
.userinfo-nickname {
color: #aaa;
}
.usermotto {
margin-top: 200px;
}
.logo {
width: 100%;
height: 360rpx;
display: block;
}
.u-wrp-bnr{
height: 360rpx;
}
/* 限时抢购 */
.timeshopp{
  height:80rpx;
  line-height:80rpx;
  text-align: center;
}
.timeshoppbinner{
  width:100%;
  height:80rpx;
}
.timeshopp image{
  width:300rpx;
  height:30rpx;
}
.timeshoppbinner .u-wrp-bnr{
height: 80rpx;
line-height:80rpx;
font-size:25rpx;
}
/* 限时抢购导航 */
.lift-list{
  overflow: hidden;
}
.lift-list .today_right  .jian{
  float: right;
  width:30rpx;
  height:30rpx;
}
.today {
/* height: 349rpx; */
line-height: 101rpx;
flex: 1;
display: -webkit-box;
overflow-x: scroll;
overflow: auto;
-webkit-overflow-scrolling: touch;
padding-left: 20rpx;
padding-top: 10rpx;
padding-bottom: 10rpx;

}
.todaybox{
display: flex;
width: 657rpx;
height: 346rpx;
overflow: hidden;
box-shadow:0px 0px  3px 3px rgb(230, 228, 228);
padding: 5rpx;
border-radius: 8rpx;
margin-right:20rpx;
}
.todaybox .today_left{
width: 53%;

}
.todaybox .today_left .today-leftleft{
  display: flex;
  height: 240rpx;
line-height:240rpx;
}
.todaybox .today_left image{
width: 401rpx;
height: 335rpx;



}
.today .todaybox .today_right{
height: 342rpx;
width: 401rpx;
font-size: 25rpx;
line-height: 60rpx;
margin-left: 81rpx;

}
.todaybox .today_right .bottomprice{
height: 110rpx;
line-height: 110rpx;
width: 447rpx;
margin-top: 20rpx;


}
.todaybox .today_right .bottompricechild{
width: 200rpx;
height: 69rpx;
line-height: 74rpx;
/* margin-left: 169rpx; */
border: 1px solid #e0e0e0;
display: flex;
justify-content: space-around;
margin-top: 16rpx;
}
.todaybox .today_right .bottompricechild text{
  flex: 1;
  text-align: center;
}
.todaybox .today_right .bottompricechild text:nth-child(2){
  border-left:1px solid #e0e0e0;
  border-right:1px solid #e0e0e0;
}
.todaybox .today_right image{
  width:20rpx;
  height:20rpx;
}
.todaybox .today_right view:nth-child(1){
  margin-top: 87rpx;

}
.todaybox .today_right view:nth-child(2){
  color:gray;
}
.today_right view:nth-child(3){
  color:red;
}
.todaybox .today_right view:nth-child(3) text{
  text-decoration: line-through;
  color:gray;
}
.todaybox .today_right view:nth-child(4){
  color:black;
  /* margin-left:150rpx; */
}
